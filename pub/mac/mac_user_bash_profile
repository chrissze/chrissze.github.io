	. ~/.bashrc
fi



#############################
# USER BASH_PROFILE EXPORTS #
#############################

    export AIRTABLE_API_KEY='xxxx'

    export DJANGO_SECRET='abcd'

    export DJANGO_SETTINGS_MODULE='nuthosting.settings'

    # to make rust compiler woking, xcode 15 in MacOS 15 Sequoia
    export LIBRARY_PATH=/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/lib

    # python asyncpg's default connection env
    export PGHOST='localhost'

    export PGDATABASE='postgres'

    export PGUSER='postgres'

    export PGPASSWORD='hP'

    export PGPORT=5432

    # to make python nuitka compiler working
    export SDKROOT='/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk'


echo "hi I'm $USER  .bash_profile 644 ends."

